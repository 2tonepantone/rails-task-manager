<div class="container">
  <div class="cards">
    <% @tasks.each do |task| %>
    <div class="card style="width: 18rem;">
      <div class="card-header">
        <%= task.title %>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= task.details %></li>
      </ul>
    </div>
    <% end %>
  </div>
</div>
