<div class="container">
  <div class="cards">
    <% @tasks.eachdo |task| %>
    <div class="card mb-2">
      <div class="card-header">
        <%=task.title %>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= task.details %></li>
      </ul>
    </div>
    <% end %>
  </div>
</div>
